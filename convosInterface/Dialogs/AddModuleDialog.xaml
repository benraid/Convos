<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.Convos.Dialogs.AddModuleDialog"
             Title="AddModuleDialog"
             NavigatedTo="OnArriving">
    <VerticalStackLayout>
        <Label 
            Text="Add Module to Course"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label Text="Enter Module Name:"/>
        <Entry Text="{Binding Name}"/>

        <Label Text="Enter Module Description:"/>
        <Entry Text="{Binding Description}"/>

        <Button Text="Submit Module" Clicked="SubmitModuleClick" Margin="10"/>
    </VerticalStackLayout>
</ContentPage>
