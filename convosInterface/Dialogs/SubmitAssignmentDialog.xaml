<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.Convos.Dialogs.SubmitAssignmentDialog"
             Title="SubmitAssignmentDialog"
             NavigatedTo="OnArriving">
    <VerticalStackLayout>
        <Label 
            Text="Submit to Selected Assignment"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label Text="Enter submission title:"/>
        <Entry Text="{Binding Title}"/>

        <Label Text="Enter assignment answer:"/>
        <Entry Text="{Binding Answer}"/>

        <Button Text="Submit Assignment" Clicked="SubmitAssignmentClick" BackgroundColor="Green" TextColor="White" Margin="10"/>
    </VerticalStackLayout>
</ContentPage>
