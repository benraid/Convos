<!-- StudentGradesDetailView.xaml -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.Convos.Views.StudentGradesDetailView"
             Title="StudentGradesDetailView">
    <VerticalStackLayout>
        <Label Text="Student Grades:"/>
        <ListView ItemsSource="{Binding SelectedStudent.Grades}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Spacing="200" Margin="20,0">
                            <Label Text="{Binding Key}" FontAttributes="Bold"/>
                            <Label Text="{Binding Value}" FontSize="Small" TextColor="Gray"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>